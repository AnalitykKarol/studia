#include <iostream>
#include <cctype>
#include <string>
using namespace std;

int main() {

    int litery = 0, cyfry = 0, znaki = 0;

    string asd;
    cout << "Wprowadz znaki :" << endl;
    getline(cin, asd);
    int n = asd.size();

    for(int i = 0;i<n;i++){
        char cc = asd[i];
        if (cc == '0') {
            break;
        }

        if (isalpha(cc)) {
            litery++;
        } else if (isdigit(cc)) {
            cyfry++;
        } else {
            znaki++;
        }
    }

    cout << "Liczba liter: " << litery << endl;
    cout << "Liczba cyfr: " << cyfry << endl;
    cout << "Liczba symboli: " << znaki << endl;

    return 0;
}
