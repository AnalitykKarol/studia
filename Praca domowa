#include <iostream>
using namespace std;
int main() {
    float x;
    int n;

    cout<< "Podaj liczbe x (liczba zmiennoprzecinkowa):";
    cin >> x;

    cout<< "POdaj liczbe n (liczba calkowita)";
    cin >> n;

float wynik = 1;

    if (n>=0) {
        for (int i = 0; i<n; i++){
            wynik *= x;
        }
    } else {
        for (int i = 0;  i < -n; i++) {
            wynik /= x;}
    }

    cout << "Wynik: " << wynik<< endl;

    return 0;

    }
